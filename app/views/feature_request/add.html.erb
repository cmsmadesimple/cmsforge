<div class="content clear">
<% @curloc = 'feature_request' -%>

<div class="small_nav">
  <%= link_to "Back to List", :action => :list, :id => @feature_request.project_id -%>
</div>

<h4>Add Feature Request</h4>

<%= error_messages_for 'feature_request' -%>

<% form_tag :action => 'add', :controller => 'feature_request' do -%>

  <div class="entry">
    <div  class="label">Assigned To:</div >
    <div  class="value">
      <%= select('feature_request', 'assigned_to_id', [['None', '100']] + @feature_request.project.users.collect{ |a| [a.login, a.id] }) -%>
    </div >
  </div>

  <div class="entry">
    <div  class="label">Summary:</div >
    <div  class="value">
      <%= text_field('feature_request', 'summary', :size => '100', :maxlength => '255') -%>
    </div >
  </div>

  <div class="entry">
    <div class="label">Detailed Description:</div>
    
      <%= text_area 'feature_request', 'description', { :cols => 100, :rows => 15 } -%>
    
  </div>
  
  <div class="entry">
    <div class="label"></div>
    <div class="entry">
	 <div class="bt-forms">
      <%= hidden_field 'feature_request', 'project_id' -%>
      <%= submit_tag 'Submit New Feature Request' -%>
      <%= submit_tag 'Cancel', { :name => 'cancel' } -%>
	  </div><!--bt-forms-->
    </div>
  </div>

<% end -%>
</div><!--content-->